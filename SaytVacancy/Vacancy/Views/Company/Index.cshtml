@using Vacancy.Core
@using Vacancy.Repository.Dto.CompanyDto
@model IEnumerable<Company>

@{
}

<div class="float-end">
    <a href="/cabinet/create" class="btn btn-outline-primary">Додати компанію</a>
</div>


<h1>Список компанії</h1>
<hr />

<table class="table table-bordered">
    <thead>
        <tr>
            
            <th>Назва компанії</th>            
            <th>Logotype</th>            
            <th>Сфера діяльності</th>           
            <th>Інформація </th>            

        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                
                <td>@u.CompanyName </td>                
                <td>@u.Logotype</td>                
                <td>@u.Fieldactivity.FieldactivityName</td>                
                <td>@u.Information.InformationName </td>               


                <td>
                    <a href="/users/edit/@u.CompanyId" class="btn btn-warning">Редагувати</a>
                    <a href="/users/delete/@u.CompanyId" class="btn btn-danger">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
